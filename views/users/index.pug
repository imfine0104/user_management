extends ../layout
block content
    h1 
        span Users
        a.ml-3.btn.btn-primary(href="/users/create") New
    .d-flex
        form.ml-auto.form-inline(action="/users/search", method = "GET")
            input.form-control.mb-2(type="text", name="q", placeholder="Search...", value=q) 
            button.ml-2.mb-2.btn.btn-primary Search
    table.table
        tr 
            th Name 
            th Phone
            th Actions
        each user in users
            
            tr 
                td= user.name 
                td= user.phone
                td
                    a.btn.btn-info(href="/users/" + user.id, role="button") View

    
