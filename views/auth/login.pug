extends ../layout
block content
    h1.mb-4 Login
    if errors 
        each error in errors
            alert.alert-danger= error
            br
    form(action="/login", method="POST")
        label(for="email") 
            b Email
        br
        input#email(type="text", name="email", placeholder="Email", value= values? values.email : "")
        br
        label(for="password") 
            b Password
        br
        input#password(type="password", name="password", placeholder="Password", value= values? values.password : "")   
        br 
        button.mt-2.btn.btn-primary Login